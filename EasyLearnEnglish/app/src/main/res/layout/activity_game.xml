<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".puzzle.game"
    android:background="@drawable/bgpon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/btn_easy"
            android:layout_width="264dp"
            android:layout_height="64dp"
            android:text="Easy"
            android:onClick="easy"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btn_medium"
            android:layout_width="264dp"
            android:layout_height="64dp"
            android:text="Medium"
            android:onClick="medium"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_hard"
            android:layout_width="264dp"
            android:layout_height="64dp"
            android:text="Hard"
            android:onClick="hard"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_materi"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:onClick="materi"
            android:src="@drawable/materi" />

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:onClick="book"
            android:src="@drawable/bukue" />

        <ImageView
            android:id="@+id/img_kuis"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="ulangan"
            android:contentDescription="TODO"
            android:src="@drawable/kuis" />

        <ImageView
            android:id="@+id/img_game"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/gamee" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:onClick="user"
            android:src="@drawable/profil" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>